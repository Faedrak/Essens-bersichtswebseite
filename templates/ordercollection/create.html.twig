{% extends 'base.html.twig' %}

{% block title %}Sammelbestellungen{% endblock %}


{% block body %}

<div class="container" style="margin-top: 1em;">    
    <h2>Restaurant wählen</h2>
    <p>Wähle ein Restaurant aus, bei dem Ihr zusammen Bestellen wollt.</p>
    <div class="row">
    {% for restaurant in restaurants %}
        <div class="col-sm-6">
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">{{ restaurant.name }}</h5>
                    <p class="card-text">Telefon Nummer: {{ restaurant.TelefonNr }}</p>
                    {% if restaurant.Mobil is null %}
                        <p class="card-text">Mobil: {{ restaurant.Mobil }}</p>
                    {% endif %}
                    <p class="card-text">Straße: {{ restaurant.Straße }} {{ restaurant.HausNr }}</p>
                    <p class="card-text">PLZ-Ort: {{ restaurant.ort.plz }} {{ restaurant.ort.ort }}</p>
                    <a href="{{ path('new', {id: restaurant.id})}}" class="btn btn-primary">Wähle Restaurant</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>

{% endblock %}