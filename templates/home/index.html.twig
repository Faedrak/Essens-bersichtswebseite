{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div class="container" style="margin-top: 1em;">
    <div class="row">
    {% for restaurant in restaurants %}
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body" style="margin-top: 1em;">
                    <h5 class="card-title">{{ restaurant.name }}</h5>
                    <p class="card-text">Telefon Nummer: {{ restaurant.TelefonNr }}</p>
                    <p class="card-text">Mobil: {{ restaurant.Mobil }}</p>
                    <p class="card-text">Straße: {{ restaurant.Straße }} {{ restaurant.HausNr }}</p>
                    <a href="{{ path('gerichte', {id: restaurant.id})}}" class="btn btn-primary">Zeige Gerichte</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>


{% endblock %}
